    private void CompilarActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        int sizeCodeFont = jTextAreaCodeFont.getText().length();
        
        String codeFont = jTextAreaCodeFont.getText();
        VerificaTokens textVazio = new VerificaTokens();
        ValidaClassePhp validaPhp = new ValidaClassePhp();
        
        if(textVazio.isCodeVazio(codeFont)){
        JOptionPane.showMessageDialog(null, "Código Fonte vazio!");
        }
        
        if(validaPhp.isValida(codeFont)){
        JOptionPane.showMessageDialog(null, "A classe É VÁLIDO!");
        }else{
            JOptionPane.showMessageDialog(null, "Classe NÃO é válida");
        }

    }                                        

